<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Customer's Profile</h1>
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <form action="/users/.../?_method=PUT" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="FirstName" class="form-label">First Name</label>
                    <input type="text" name="FirstName" id="FirstName" class="form-control" autofocus required readonly value="<%= thisUser.FirstName %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label">Last Name</label>
                    <input type="text" name="LastName" id="LastName" class="form-control" required readonly value="<%= thisUser.LastName %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="PhoneNo" class="form-label">Phone Number</label>
                    <input type="text" name="PhoneNo" id="PhoneNo" class="form-control" required readonly value="<%= thisUser.PhoneNo %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="BirthDate" class="form-label">Birth Date</label>
                    <input type="date" name="BirthDate" id="BirthDate" class="form-control" required readonly value="<%= thisUser.BirthDate %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Address</label>
                    <input type="text" name="Address" id="Address" class="form-control" required readonly value="<%= thisUser.Address %>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="mb-3">
                        <label for="CarRegNum" class="form-label">Car Registration Number</label>
                        <input type="text" name="CarRegNum" id="CarRegNum" class="form-control" readonly value="<%= thisUser.CarRegNum %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="BloodGroup" class="form-label">Blood Group</label>
                        <select class="form-select" name="BloodGroup" id="BloodGroup" disabled>
                            <option value="">Please choose your blood group.</option>
                            <option <%= thisUser.BloodGroup==="A"? 'selected': ''%> value="A">A</option>
                            <option <%= thisUser.BloodGroup==="B"? 'selected': ''%> value="B">B</option>
                            <option <%= thisUser.BloodGroup==="O"? 'selected': ''%> value="O">O</option>
                            <option <%= thisUser.BloodGroup==="AB"? 'selected': ''%> value="AB">AB</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <a href="/users/<%= thisUser.Userid %>/edit" class="btn btn-outline-secondary">Edit Profile</a>
                </div>
            </form>
        </div>
        <% if(user.informations.length > 0) { %>
            <h1 class="text-center">My Extra Information</h1>
            <% } %>
                <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <% for( let i=0; i < user.informations.length; i++ ) { %>
                        <div class="row">
                            <div class="card mb-3 index-card col-md-8 offset-md-2">
                                <div class="row">
                                    <div class="">
                                        <div class="card-body">
                                            <h2 class="card-title">
                                                Name:
                                                <%= user.informations[i].informationType.name %>
                                            </h2>
                                            <p class="card-text">
                                                Description:
                                                <%= user.informations[i].informationType.description %>
                                            </p>
                                            <p class="card-text">
                                                Value:
                                                <%= user.informations[i].value %>
                                            </p>
                                            <a href="/extrainfo/<%= thisUser.Userid %>/<%= user.informations[i]._id.toString() %>/edit" class="btn btn-primary">Edit</a>
                                            <form action="/extrainfo/<%= thisUser.Userid %>/<%= user.informations[i]._id.toString() %>?_method=DELETE" method="POST" class="d-inline">
                                                <button class="btn btn-danger">Delete</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

    </div>