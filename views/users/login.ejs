<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow mb-5">
                <img src="https://images.unsplash.com/photo-1517807289433-f0282e362596?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OTJ8fGNhbXB8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                    alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title mb-3">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-outline-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>