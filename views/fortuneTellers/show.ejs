<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= results[0][0].UserName %>
                    </h5>
                    <p class="card-text">
                        <%= results[0][0].FirstName %>
                            <%= results[0][0].LastName %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= results[0][0].WorkExp %>
                    </li>
                    <li class="list-group-item text-muted">
                        Tel:
                        <%= results[0][0].PhoneNo %>
                    </li>
                    <li class="list-group-item text-muted">
                        Address:
                        <%= results[0][0].Address %>
                    </li>
                </ul>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mt-3">Make an Appointment</h2>
            <form action="/fortuneTellers/<%= results[0][0].Userid %>" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="Date">Enter a date and time for your booking</label>
                    <input class="form-control" id="Date" type="datetime-local" name="Date" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Duration">Duration (half an hour)</label>
                    <input class="form-control" id="Duration" type="number" name="Duration" min="1" max="48" required>
                </div>
                <div class="mb-3 ">
                    <button class="btn btn-success ">Make an Appointment</button>
                </div>
            </form>
        </div>
    </div>